---
import type { MarkdownLayoutProps } from 'astro';
import Main from 'src/layouts/Main.astro';

type Props = MarkdownLayoutProps<{
    title: string;
    subtitle: string;
    poster: string;
}>;

const { title, subtitle, poster } = Astro.props.frontmatter;
---
<Main title={`${title} | Frau Katerina | Blog`}>
    <figure>    
        <img src={poster} alt={title} width="100%" height="480px" class="figure__image"/>
        <figcaption>Poster image for {title.toLocaleLowerCase()}</figcaption>
    </figure>
    <h1>{title}</h1>
    <h2>{subtitle}</h2>
    <slot />    
</Main>

<style>
    h1 + h2 {
        margin-bottom: 3rem;
    }

    figure {
        margin: 0;
    }
    .figure__image {
        max-width: 100%;
        border-radius: 10px;
    }

    figcaption {
        font-size: 0.9rem;
     
    }
</style>